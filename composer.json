{
    "name": "yousign/safe-migrations",
    "description": "Make your migrations safe",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Benoit Galati",
            "email": "benoit.galati@yousign.com"
        },
        {
            "name": "Nicolas Dousson",
            "email": "nicolas.dousson@yousign.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Yousign\\SafeMigrations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yousign\\SafeMigrations\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.7",
        "doctrine/migrations": "^3.3",
        "symfony/string": "^6.4|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "phpstan/phpstan": "1.10.50",
        "phpstan/phpstan-phpunit": "1.3.15",
        "phpunit/phpunit": "^10.4.2",
        "symfony/var-dumper": ">=6.3.8|^7.0"
    }
}
